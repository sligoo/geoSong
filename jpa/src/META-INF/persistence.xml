<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" version="2.0">

    <persistence-unit name="NewPersistenceUnit">
        <mapping-file>server/GeosongsEntity.xml</mapping-file>
        <mapping-file>server/SongsEntity.xml</mapping-file>
        <mapping-file>server/UsersEntity.xml</mapping-file>
        <class>server.GeosongsEntity</class>
        <class>server.SongsEntity</class>
        <class>server.UsersEntity</class>
        <properties>
            <property name="toplink.jdbc.url" value="jdbc:postgresql://localhost:5432/geoSong"/>
            <property name="toplink.jdbc.driver" value="org.postgresql.Driver"/>
            <property name="hibernate.connection.url" value="jdbc:postgresql://localhost:5432/geoSong"/>
            <property name="hibernate.connection.driver_class" value="org.postgresql.Driver"/>
            <property name="openjpa.ConnectionURL" value="jdbc:postgresql://localhost:5432/geoSong"/>
            <property name="openjpa.ConnectionDriverName" value="org.postgresql.Driver"/>
            <property name="eclipselink.jdbc.url" value="jdbc:postgresql://localhost:5432/geoSong"/>
            <property name="eclipselink.jdbc.driver" value="org.postgresql.Driver"/>
        </properties>
    </persistence-unit>
</persistence>
